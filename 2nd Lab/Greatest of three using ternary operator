// Finding greatest of three numbers using ternary operator 

import java.io.*;
import java.util.*;

class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        
    int a,b,c,x,result;
    System.out.print("Enter the values of 3 numbers a, b & c :");
    a = sc.nextInt();
    b = sc.nextInt();
    c = sc.nextInt();
    x =(a>b ? a : b);
    result = (c>x ? c : x);
    
    System.out.print("The greatest of three number is : " +result);
    
    }
}
